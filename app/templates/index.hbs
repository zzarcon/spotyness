<div id="explore-section">
  <h2>Featured playlists</h2>
  <ul>
    {{#each musicman.featuredPlaylists as |playlist|}}
      {{#link-to "playlist" playlist.owner.id playlist.id tagName="li"}}
        <div class="play-playlist">
          <i class="fa fa-play"></i>
        </div>
        <img src="{{playlist.images.firstObject.url}}" alt="{{playlist.name}}">
        {{playlist.name}} ({{playlist.tracks.total}})
      {{/link-to}}
    {{/each}}
  </ul>
</div>