<footer id="app-footer">
  <button {{action "togglePlay" target=videoPlayer}}>
    {{#if videoPlayer.isPlaying}}Pause{{else}}Play{{/if}}
  </button>
  <button {{action "toggleVolume" target=videoPlayer}}>
      {{#if videoPlayer.isMuted}}Unmute{{else}}Mute{{/if}}
  </button>
  <button {{action "playPrev" target=activePlaylist}}>Prev</button>
  <button {{action "playNext" target=activePlaylist}}>Next</button>

  {{videoPlayer.currentTimeFormatted}}
  <input id="video-slider" type="range" min="0" max={{videoPlayer.durationValue}} value={{videoPlayer.currentTimeValue}} {{action "seekTo"}}>
  {{videoPlayer.durationFormatted}}
</footer>